<html>
  <head>
    <title>Deployment Instructions</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/tomorrow-night.css">
    <link rel="stylesheet" href="/app.css" />
    <!-- Begin Opengraph -->
    <meta property="og:url" content="https://mike-seo.herokuapp.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="List of courses" />
    <meta property="og:description" content="Courses I teach. We turn great developers into seasoned experts" />
    <!-- End Opengraph -->
    
  </head>
  <body>
    <h1>Courses</h1>
    <!-- BEGIN EXERCISE -->
    <ul class='courses'>
      
      {{!-- iterate over all the courses --}}    
      {{#each courses as |course|}}
        <li class='course'>
          <a href='/course/{{course.attributes.slug}}'>
            <img src={{course.attributes.image-info.square2x.url}} alt="" class="course-image">
            <h3 class="course-title">{{course.attributes.title}}</h3>
          </a>
          <p>{{course.attributes.summary}}</p>
        </li>
      {{/each}}
    </ul>
    <!-- END EXERCISE -->
    <script src="/js/tester.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/highlight.pack.js"></script>
    <script src="/js/jquery-3.2.0.min.js"></script>
    <script src="/tests.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
  </body>
</html>